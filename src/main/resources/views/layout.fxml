                              <Font name="Laksaman" size="18.0" />
                           </font>
                           <graphic>
                              <FontAwesomeIconView glyphName="PENCIL" size="30" />
                           </graphic>
                        </JFXButton>
                        <JFXButton fx:id="btnMyProfile" alignment="BASELINE_LEFT" onAction="#showMyProfile" prefHeight="55.0" prefWidth="201.0" text="My profile">
