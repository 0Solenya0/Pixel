<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="755.0" prefWidth="1240.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.controllers.LayoutController">
   <children>
      <StackPane fx:id="stackPane" prefHeight="755.0" prefWidth="1220.0">
         <children>
            <BorderPane fx:id="borderPane" prefHeight="755.0" prefWidth="1215.0">
               <left>
                  <VBox alignment="TOP_CENTER" prefHeight="755.0" prefWidth="210.0" style="-fx-background-color: F0F7FF;" BorderPane.alignment="CENTER">
                     <effect>
                        <DropShadow />
                     </effect>
                     <children>
                        <JFXButton fx:id="btnBack" contentDisplay="CENTER" onAction="#backButtonClicked" prefHeight="35.0" prefWidth="33.0" visible="false">
