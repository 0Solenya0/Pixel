                              <Font name="Laksaman" size="18.0" />
                           </font>
                           <graphic>
                              <FontAwesomeIconView glyphName="USER" size="30" />
                           </graphic>
                        </JFXButton>
                        <JFXButton fx:id="btnExplorer" alignment="BASELINE_LEFT" onAction="#showExplorer" prefHeight="55.0" prefWidth="201.0" text="Explore">
