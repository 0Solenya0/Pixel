                              <FontAwesomeIconView glyphName="ARROW_LEFT" size="25" />
                           </graphic>
                        </JFXButton>
                        <JFXButton fx:id="btnHome" alignment="BASELINE_LEFT" onAction="#showHomePage" prefHeight="55.0" prefWidth="201.0" text="Home">
