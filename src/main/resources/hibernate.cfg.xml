<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQL95Dialect</property>
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.username">postgres</property>
        <property name="hibernate.connection.password">postgres</property>
        <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/Pixel</property>



        <property name="connection_pool_size">10</property>

        <property name="hbm2ddl.auto">update</property>

        <property name="show_sql">true</property>

        <mapping class="shared.models.User"/>
        <mapping class="shared.models.Tweet"/>
        <mapping class="shared.models.Notification"/>
        <mapping class="server.db.models.FollowRequest"/>
        <mapping class="shared.models.Message"/>
        <mapping class="shared.models.Group"/>
        <mapping class="shared.models.UserList"/>
    </session-factory>
</hibernate-configuration>
